local capsule = asset.require("./capsule_image")


local CapsuleImage = {
  Identifier = "CrabImage",
  Type = "ScreenSpaceImageLocal",
  Name = "Crab Nebula",
  UseRadiusAzimuthElevation = true,
  FaceCamera = false,
  RadiusAzimuthElevation = { 1.0, 0.5, 0.1 },
  UsePerspectiveProjection = false,
  Opacity = 1.0,
  TexturePath = capsule.image .. "return_capsule_1.jpg",
  Tag = { "mission_jwst_target" },
  Description = [[
    text
  ]]
}

asset.onInitialize(function()
  openspace.addScreenSpaceRenderable(CapsuleImage)
end)

asset.onDeinitialize(function()
  openspace.removeScreenSpaceRenderable(CapsuleImage)
end)

asset.export(CapsuleImage)



asset.meta = {
  Name = "Crab Nebula Image",
  Version = "1.0",
  Description = "Screenspace image of the Crab Nebula",
  Author = "OpenSpace Team",
  URL = "http://openspaceproject.com",
  License = "MIT license"
}
